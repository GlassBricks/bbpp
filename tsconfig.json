{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "strict": true,
    "types": [
      "typescript-to-lua/language-extensions",
      "lua-types/5.2"
    ],
    "jsx": "react",
    "jsxFactory": "Reactorio.createElement",
    "jsxFragmentFactory": "Reactorio.Blank",
    "plugins": [
      {
        "name": "typescript-tstl-plugin"
      }
    ]
  },
  "tstl": {
    "luaTarget": "5.2",
    "noHeader": true,
    "luaPlugins": [
      {
        "name": "./luaPlugins/jsx.ts"
      }
    ]
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "./luaPlugins/*"
  ]
}
